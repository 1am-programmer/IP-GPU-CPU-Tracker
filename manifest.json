{
  "manifest_version": 3,
  "name": "System Info Extension",
  "version": "1.0",
  "description": "Fetch and display GPU, CPU, and network information",
  "permissions": ["system.cpu"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.jpg",
      "48": "images/icon-48.jpg",
      "128": "images/icon-128.jpg"
    }
  },
  "icons": {
    "16": "images/icon-16.jpg",
    "48": "images/icon-48.jpg",
    "128": "images/icon-128.jpg"
  }
}
